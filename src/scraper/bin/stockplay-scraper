#!/usr/bin/env perl

################################################################################
# Configuration
#

# XXX: library location
use lib '../lib';

# Packages
use DBI;
use StockPlay::Scraper::PluginManager;

# Write nicely
use warnings;
use strict;

# Setup database handle
my $dbargs = {
	AutoCommit	=> 0,
	PrintError	=> 1
};
my $dbh = DBI->connect("dbi:SQLite:dbname=scraper.db","","",$dbargs);


################################################################################
# Main
#

print "* Loading scraper\n";

# Plugin manager
print "- Loading plugin manager\n";
my $pluginmanager = new StockPlay::Scraper::PluginManager;

my @infohashes = $pluginmanager->get_group('StockPlay::Scraper::Plugin');
foreach my $infohash (@infohashes) {
	print "Testing ", $infohash->{name}, "\n";
	my $plugin = $pluginmanager->instantiate($infohash);
	
	use Data::Dumper;
	my @exchanges = $plugin->getExchanges();
	print "Exchanges: ", Dumper(\@exchanges), "\n";
	
	my @indexes = $plugin->getIndexes($exchanges[0]);
	print "Indexes: ", Dumper(\@indexes), "\n";
	
	my @securities = $plugin->getSecurities($exchanges[0]);
	print "Securities ", Dumper(\@securities), "\n";
	exit();
	
	my @quotes = $plugin->getQuotes(@securities[0..10]);
	print "Quotes: ", Dumper(\@quotes), "\n";
}

#$blabla->run();

exit(0);

__END__

################################################################################
# Documentation
#

=pod

