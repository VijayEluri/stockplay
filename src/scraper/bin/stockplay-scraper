#!/usr/bin/env perl

################################################################################
# Configuration
#

# XXX: library location
use lib '../lib';

# Packages
use Storable;
use StockPlay::Scraper::PluginManager;
use StockPlay::Scraper::Daemon;

# Write nicely
use warnings;
use strict;

# Constants
my $PLUGIN_MAX_AGE = 3600*24*7;


################################################################################
# Main
#

print "* Loading scraper\n";

# Plugin manager
print "- Loading plugin manager\n";
my $pluginmanager = new StockPlay::Scraper::PluginManager;
my @infohashes = $pluginmanager->get_group('StockPlay::Scraper::Plugin');

# Load plugins
print "- Instantiating all plugins\n";
my @plugins;
foreach my $infohash (@infohashes) {
	print "  -> ", $infohash->{name}, "\n";
	
	# Manage a dump
	my $plugin;
	if (-f $infohash->{name} . '.dump') {
		print "     loading from dump\n";
		$plugin = retrieve($infohash->{name} . '.dump');
		
		if (time - $plugin->infohash->{time} > $PLUGIN_MAX_AGE) {
			print "     loaded state out of date\n";			
			$plugin = undef;
		}
	}
	
	# Instantiate a plugin, if neccesary
	if (not defined $plugin) {
		print "     instantiating\n";
		$plugin = $pluginmanager->instantiate($infohash);
		print "     dumping\n";
		$plugin->clean();
		store $plugin, $infohash->{name} . '.dump';
	}
	
	push(@plugins, $plugin);
}

# Load the daemon
print "- Loading daemon\n";
my $daemon = new StockPlay::Scraper::Daemon(plugins => \@plugins);
$daemon->run();

exit(0);

__END__

################################################################################
# Documentation
#

